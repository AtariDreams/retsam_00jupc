//FLGチェンジ
ev_c05r1001_flag_change:
	//インタビュアーが出現するかどうか？
	_TV_INTERVIEWER_CHECK	11,LOCALWORK0
	_IFVAL_CALL		LOCALWORK0,EQ,0,ev_c05r1001_interviewer_off
	_END


//OBJチェンジ
ev_c05r1001_obj_change:
	//インタビュアーが出現するかどうか？
	_TV_INTERVIEWER_CHECK	11,LOCALWORK0
	_IFVAL_JUMP		LOCALWORK0,NE,0,ev_c05r1001_obj_interviewer_on

	/*インタビュアー出現条件がFALSE&&OBJバニッシュフラグがONでないならONに変更*/
	_IF_FLAGOFF_CALL	FV_TV_INTERVIEW_11, ev_c05r1001_interviewer_off
	_END
	
ev_c05r1001_interviewer_off:
	_FLAG_SET		FV_TV_INTERVIEW_11
	_RET

ev_c05r1001_obj_interviewer_on:
	_IF_FLAGON_JUMP	FV_TV_INTERVIEW_11, ev_c05r1001_obj_interviewer_on_add	// インタビューONなのにフラグがONの時は、手動で登録
	_FLAG_RESET		FV_TV_INTERVIEW_11
	_END

ev_c05r1001_obj_interviewer_on_add:
	_FLAG_RESET		FV_TV_INTERVIEW_11
	_OBJ_ADD		C05R1001_REPOTER_01
	_END

	

