//--------------------------------------------------------------------
/*	毒による瀕死『ちからつきた』メッセージ表示                      */
//--------------------------------------------------------------------
ev_poison_dead:
	_EVENT_START

	_GET_POKE_COUNT	SCWK_TEMP0
	_LDVAL			SCWK_TEMP1, 0

ev_poison_msg_loop:
	_APPROVE_POISON_DEAD	SCWK_ANSWER, SCWK_TEMP1
	_IFVAL_JUMP	SCWK_ANSWER,EQ,FALSE, ev_poison_msg_loop_tail

/*毒で気絶したポケモンがいたらメッセージ表示*/
	_NICK_NAME	0, SCWK_TEMP1
	_TALKMSG		msg_poison_01

ev_poison_msg_loop_tail:
//カウントアップ、手持ち全部チェックするまでループ
	_ADD_WK			SCWK_TEMP1, 1
	//_DEBUG_WATCH_WORK	SCWK_TEMP0
	//_DEBUG_WATCH_WORK	SCWK_TEMP1
	_CMPWK			SCWK_TEMP0,SCWK_TEMP1
	_IF_JUMP		NE,ev_poison_msg_loop

/*戦闘可能な手持ちポケモンが一体もいなくなったのでゲームオーバー処理へ(対象除外なし＝６）*/
	_GET_POKE_COUNT3	SCWK_ANSWER,6
	_IFVAL_JUMP		SCWK_ANSWER,EQ,0, ev_poison_game_over

	_TALK_CLOSE

	_EVENT_END
	_END

