/********************************************************************/
/*							GDS呼び出し								*/
//
//	SCWK_TEMP0	退避用として使用
//	SCWK_TEMP1	呼び出しモード(セットしておく)
//		BR_MODE_GDS_BV		( 2 )		///< GDSバトルビデオ
//		BR_MODE_GDS_BV_RANK	( 3 )		///< GDSバトルビデオランキング
//		BR_MODE_GDS_RANK	( 4 )		///< GDSランキング
//		BR_MODE_GDS_DRESS	( 5 )		///< GDSドレスアップショット
//		BR_MODE_GDS_BOX		( 6 )		///< GDSボックスショット
/********************************************************************/
ev_gds_call:
	_BLACK_OUT		SCR_WIPE_DIV,SCR_WIPE_SYNC
	_WIPE_FADE_END_CHECK

	/*WIFI接続し初回ID取得*/
	_DPW_INIT_PROC	SCWK_ANSWER
	_LDWK			SCWK_TEMP0,SCWK_ANSWER						/*退避*/

	/*GDS呼び出し*/
	_GDS_SET_PROC	SCWK_TEMP1,SCWK_TEMP0,SCWK_ANSWER

	_IFVAL_JUMP		SCWK_ANSWER,EQ,0,ev_gds_init_error			/*エラー*/
	_SET_MAP_PROC

	_BLACK_IN		SCR_WIPE_DIV,SCR_WIPE_SYNC
	_WIPE_FADE_END_CHECK

	_CHG_LOCAL_SCR												/*ローカルスクリプトに切り替え*/
	_END

/*エラー*/
ev_gds_init_error:
	_SET_MAP_PROC

	_BLACK_IN		SCR_WIPE_DIV,SCR_WIPE_SYNC
	_WIPE_FADE_END_CHECK

	/*何かエラー用の処理があれば*/

	_CHG_LOCAL_SCR												/*ローカルスクリプトに切り替え*/
	_END


