/********************************************************************/
//						ハニーツリー
/********************************************************************/
ev_honey_tree:
	_TALK_START

	/*甘い蜜をもっているか？*/
	_ITEM_CHK		ITEM_AMAIMITU,1,SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,NE,0,ev_honey_tree_honey_have

	/*持っていない場合*/
	/*木の状況を取得*/
	_GET_HONEY_TREE_STATE SCWK_ANSWER
	/*蜜が塗れる*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_OK,honey_tree_spread_ok_no_have
	/*蜜が塗られている*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_ALREADY,honey_tree_spread_already_no_have
	/*蜜が塗られて、木が揺れている*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_ENCOUNT,honey_tree_spread_encount
	_END

ev_honey_tree_honey_have:
	/*木の状況を取得*/
	_GET_HONEY_TREE_STATE SCWK_ANSWER
	/*蜜が塗れる*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_OK,honey_tree_spread_ok
	/*蜜が塗られている*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_ALREADY,honey_tree_spread_already
	/*蜜が塗られて、木が揺れている*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,HONEY_SPREAD_ENCOUNT,honey_tree_spread_encount
	_END
	
/*蜜ぬれる場合(蜜持ってない)*/
honey_tree_spread_ok_no_have:
	_TALKMSG	msg_honey_tree_01	/*甘いにおいが〜*/
	_LAST_KEYWAIT
	_TALK_CLOSE
	_TALK_END
	_END

/*蜜塗られている場合（蜜持ってない）*/
honey_tree_spread_already_no_have:
	_TALKMSG	msg_honey_tree_02	/*蜜がぬってある*/
	_LAST_KEYWAIT
	_TALK_CLOSE
	_TALK_END
	_END
	
/*蜜ぬれる場合（蜜持ってる）*/
honey_tree_spread_ok:
	_TALK_KEYWAIT	msg_honey_tree_05	/*甘いにおいが〜*/
	_JUMP		honey_tree_spread_yn

/*蜜塗られている場合（蜜持ってる）*/
honey_tree_spread_already:
	_TALK_KEYWAIT	msg_honey_tree_06	/*蜜がぬってある*/
	_JUMP		honey_tree_spread_yn
	
honey_tree_honey_check:
	_ITEM_CHK	ITEM_AMAIMITU,1,SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,NE,0,honey_tree_spread_yn

	_TALK_CLOSE	
	_TALK_END
	_END

honey_tree_honey_check_af_btl:
	_ITEM_CHK	ITEM_AMAIMITU,1,SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,NE,0,honey_tree_spread_yn

	_TALK_END
	_END	
	
/*塗れる場合＞塗るかどうかの選択肢をだす*/
honey_tree_spread_yn:
	_TALKMSG	msg_honey_tree_03	/*蜜を塗りますか？*/
	_YES_NO_WIN		SCWK_ANSWER
	_TALK_CLOSE
	/*塗る場合、情報のセットアップ*/
	_IFVAL_JUMP		SCWK_ANSWER,EQ,0,honey_tree_spread_yes	

	_TALK_END
	_END

/*蜜塗る*/
honey_tree_spread_yes:
	//みつ減らす
	_SUB_ITEM	ITEM_AMAIMITU,1,SCWK_ANSWER	/*アンサーワークの中身は使わない*/
	//スコア加算：蜜塗った
	_ADD_SCORE	SCORE_ID_HONEY_TREE
	
	_HONEY_TREE

	_TIME_WAIT			10, SCWK_ANSWER	/*アンサーワークの中身は使わない(内部で使用)*/

	_TALKMSG	msg_honey_tree_04	/*蜜をぬりました*/
	_LAST_KEYWAIT
	_TALK_CLOSE
	_TALK_END
	_END

/*塗られていて、木が揺れている場合＞エンカウント*/
honey_tree_spread_encount:
	_RECORD_INC			RECID_MITSU_ENC
	_HONEY_TREE_BTL_SET

	/*敗北へ*/
	_TRAINER_LOSE_CHECK	SCWK_ANSWER
	_IFVAL_JUMP			SCWK_ANSWER,EQ,0,ev_honey_tree_lose

	/*戦闘終わったら蜜塗りアニメ状態をクリア*/
	_HONEY_TREE_AFTER_SET

	/*再び蜜を塗るかチェック*/
	_JUMP	honey_tree_honey_check_af_btl

//--------------------------------------------------------------------
//	敗北
//--------------------------------------------------------------------
ev_honey_tree_lose:
	_NORMAL_LOSE
	_TALK_END
	_END

