//--------------------------------------------------------------------
//		レポートメイン部分
//		SCWK_ANSWERが	０のときセーブキャンセル
//		SCWK_ANSWERが	１のときセーブ成功
//--------------------------------------------------------------------
ev_report_sub:
	//セーブデータの状態チェック
	_REPORT_SAVE_CHECK SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,EQ,0,ev_report_save_ng			//セーブデータ有り

	_REPORT_WIN_OPEN

	_TALKMSG		msg_common_report_01
	_YES_NO_WIN		SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,EQ,1,ev_report_cancel				//「いいえ」

	//セーブデータの状態チェック
	_REPORT_SAVE_CHECK SCWK_ANSWER

	_IFVAL_JUMP		SCWK_ANSWER,EQ,1,ev_report_save_total	 //初回セーブ、無条件で全体セーブ
	_IFVAL_JUMP		SCWK_ANSWER,EQ,2,ev_report_save_total_ask
	_IFVAL_JUMP		SCWK_ANSWER,EQ,3,ev_report_save_parts_ask
	_END

//別のセーブデータ有り＝書き込み禁止
ev_report_save_ng:
	_TALKMSG		msg_common_report_08
	_AB_KEYWAIT

	_LDVAL	SCWK_ANSWER,	0	/*結果を代入するワーク"失敗"*/
	_RET

//全体セーブ
ev_report_save_total_ask:
	_TALKMSG		msg_common_report_02
	_YES_NO_WIN		SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,EQ,1,ev_report_cancel

ev_report_save_total:
	/*「たくさん書き込んでいます」*/
	_TALKMSG		msg_common_report_09
	_JUMP			ev_report_save

//部分セーブ
ev_report_save_parts_ask:
	_TALKMSG		msg_common_report_02
	_YES_NO_WIN		SCWK_ANSWER
	_IFVAL_JUMP		SCWK_ANSWER,EQ,1,ev_report_cancel

ev_report_save_parts:

	/*07.08.09追加*/
	_IF_FLAGOFF_JUMP	FH_31_REPORT,ev_report_save_parts_msg
	_IF_FLAGON_JUMP		FH_31_REPORT,ev_reoprt_save_parts_msg_extra
	_END

//セーブ
ev_report_save:
	/*自機レポート形態追加*/
	_PLAYER_REPORT_DRAW_SET

	_TIME_WAIT			2,SCWK_ANSWER

	_CALL					common_report_core

	/*自機レポート形態削除*/
	_PLAYER_REPORT_DRAW_DEL

	_JUMP				common_report_save_reqbit

/*共通セーブ処理*/
common_report_core:
	_ADD_WAITICON

	/*07.07.24追加*/
	_IF_FLAGON_CALL		FH_31_REPORT,ev_extra_save_init

	_REPORT_SAVE	SCWK_ANSWER
	_DEL_WAITICON
	_RET

common_report_save_reqbit:
	_IFVAL_JUMP		SCWK_ANSWER,EQ,0, ev_report_failure
	_PLAYER_NAME	0
	_TALKMSG	msg_common_report_04
	_SE_PLAY		SEQ_SE_DP_SAVE
	_SE_WAIT		SEQ_SE_DP_SAVE
	_AB_KEY_TIME_WAIT	30

	_REPORT_WIN_CLOSE

	_RET

ev_report_cancel:					/*「いいえ」*/
	_REPORT_WIN_CLOSE

	_LDVAL	SCWK_ANSWER,	0	/*結果を代入するワーク"失敗"*/
	_RET

ev_report_failure:
	_TALKMSG	msg_common_report_06
	_AB_KEYWAIT

	_REPORT_WIN_CLOSE

	_RET

