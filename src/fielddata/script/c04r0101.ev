/********************************************************************/
/*							店主									*/
/********************************************************************/
ev_c04r0101_middlem:
	_TALK_OBJ_START

	//自転車入手していたら
	_IF_FLAGON_JUMP	FE_CYCLE_GET,ev_c04r0101_middlem1a_02

	//自転車所有前
	_TALK_KEYWAIT	msg_c04r0101_middlem_01

	//アイテム名、個数をセット
	_LDVAL			SCWK_TEMP0,ITEM_ZITENSYA
	_LDVAL			SCWK_TEMP1,1
	_CHG_COMMON_SCR	SCRID_ITEM_EVENT_KEYWAIT	/*▼あり*/

	_FLAG_SET		FE_CYCLE_GET

	/*ハクタイの左と下を探検セットを入手するまで止める*/
	_LDVAL			WK_SCENE_C04_STOPPER,1

	/*ワープIDセット*/
	_SET_WARP_ID	WARP_ID_C04

	_JUMP			ev_c04r0101_middlem1a_02
	_END

//自転車所有後
ev_c04r0101_middlem1a_02:
	_TALKMSG	msg_c04r0101_middlem_02
	_LAST_KEYWAIT
	_TALK_CLOSE
	_TALK_OBJ_END
	_END


