/*r202のポケトレデモ開始にする*/
ev_support_dir_common:
	_OBJ_DEL		T02_SUPPORT
	_FLAG_RESET		FV_R202_SUPPORT
	_LDVAL			WK_SCENE_R202,2
	_TALK_OBJ_END
	_END

