ev_c04r0302_babygirl1:
	_EASY_OBJ_MSG	msg_c04r0302_babygirl1_01
	_END


/********************************************************************/
/*							和風爺さん									*/
/********************************************************************/
ev_c04r0302_oldman1:
	_EASY_OBJ_MSG	msg_c04r0302_oldman1_01
	_END

